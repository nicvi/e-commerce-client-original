<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_trolley"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="184dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView_productToBuy"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_margin="8dp"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:id= "@+id/linearLayout_btnCardPurchaseNow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButton_decreaseToBuyNow"
                    android:layout_width="53dp"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    card_view:srcCompat="@drawable/minus_sign" />

                <TextView
                    android:id="@+id/TextView_quantityPurchased"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:shadowColor="#FFFFFF"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="#223263"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/imageButton_increaseToBuyNow"
                    android:layout_width="53dp"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    card_view:srcCompat="@drawable/plus_sign" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_productToBuy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/poppins"
                android:maxLength="47"
                android:text="@string/txt_longProductName"
                android:textAlignment="viewStart"
                android:textColor="#223263"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_previousPriceToBuy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="$ 534.33"
                    android:textAllCaps="false"
                    android:textColor="#9098B1"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView_offPriceToBuy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/poppins"
                    android:text="24% descuento"
                    android:textColor="#FB7181"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView_actualPriceToBuy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/poppins"
                android:text="$ 299.43"
                android:textColor="#40BFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/linearLayout_availabilityCardPurchaseNow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_availabilityToBuy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="Disponibles"
                    android:textColor="#52870F"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView_availableProducts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:text="15"
                    android:textAlignment="center"
                    android:textColor="#223263" />
            </LinearLayout>

            <Button
                android:id="@+id/button_deleteProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_margin="8dp"
                android:text="Remover" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>